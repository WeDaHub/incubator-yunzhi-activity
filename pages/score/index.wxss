page {
  background-color: #f5f5f5;
}

.score__top {
  padding: 0 24rpx;
  height: 490rpx;
  position: relative;
  box-sizing: border-box;
}
.score__logo {
  position: absolute;
  left: 24rpx;
  padding-top: 17rpx;
}

.score__logo image {
  width: 278rpx;
  height: 46rpx;
}
.score__bg1 {
  width: 100%;
  height: 490rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.score__bg2 {
  width: 442rpx;
  height: 236rpx;
  position: absolute;
  left: 50%;
  margin-left: -221rpx;
  bottom: 0;
}

.score__info {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  height: 340rpx;
  display: flex;
}

.score__info-item {
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.score__info-item-num {
  height: 102rpx;
  font-weight: bold;
  font-size: 84rpx;
  color: #FFFFFF;
  padding: 20rpx 0 40rpx 0;
}

.score__info-item-name {
  height: 48rpx;
  line-height: 48rpx;
  opacity: 0.8;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #FFFFFF;
}
.score__login {
  margin-top: 100rpx;
  padding: 0 50rpx;
}

.score__login button {
  border-radius: 40rpx;
  width: 100% !important;
}