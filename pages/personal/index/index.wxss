/* pages/personal/index/index.wxss */
page {
  background-color: #f5f5f5;
}

.personal__top {
  padding: 0 24rpx;
  height: 424rpx;
  position: relative;
  box-sizing: border-box;
}

.personal__bg {
  width: 100%;
  height: 384rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.personal__logo {
  position: absolute;
  left: 24rpx;
  padding-top: 17rpx;
}

.personal__logo image {
  width: 278rpx;
  height: 46rpx;
}

.personal__info {
  display: flex;
  position: absolute;
  bottom: 0;
  align-items: center;
}

.personal__info image {
  height: 176rpx;
  width: 176rpx;
  border-radius: 100%;
  margin-right: 32rpx;
}

.personal__info view {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 40rpx;
}

.personal__create-btn {
  padding: 0 50rpx;
}

.personal__create-btn navigator {
  width: 100%;
  height: 96rpx;
  background: #277AFF;
  box-shadow: 0 5px 10px 0 rgba(39,122,255,0.35);
  border-radius: 48rpx;
  line-height: 96rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  margin-top: 48rpx;
}
.personal__tab {
  background: #fff;
  width: 702rpx;
  margin: 48rpx auto 0;
  border-radius: 10rpx;
}

.personal__tab-item {
  display: flex;
  align-items: center;
  height: 108rpx;
  padding: 0 32rpx;
}

.personal__tab-item-img {
  height: 48rpx;
  width: 49rpx;
  margin-right: 24rpx;
}

.personal__tab-item-title {
  flex: 1;
  font-size: 32rpx;
  color: #111;
  font-weight: bold;
}

.personal__tab-item-right {
  color: #333;
  width: 30rpx;
  text-align: center;
}

.personal__login {
  margin-top: 100rpx;
  padding: 0 50rpx;
}

.personal__login button {
  border-radius: 40rpx;
  width: 100% !important;
}
